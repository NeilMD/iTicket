<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true"
    android:clickable="true"
    android:backgroundTint="#ffffff"
    android:backgroundTintMode="add"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/request">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:orientation="horizontal"
        android:background="#95e695"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardElevation="5dp"
        android:padding ="15dp">

    <dev.dworks.libs.astickyheader.ui.SquareImageView
        android:layout_width="65dp"
        android:layout_height="6dp"
        android:id="@+id/requestimage"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:src="@drawable/ticketsbg"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textcontainer"
        android:layout_width="wrap_content"
        android:layout_marginLeft="75dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:id="@+id/nameicon"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_account_circle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/nameicon"
            android:textColor="@color/primary_text"/>

        <!--<ImageView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:id="@+id/eventicon"
            android:tint="@color/colorPrimary"
            android:layout_below="@+id/nameicon"
            android:src="@drawable/ic_event"/>-->

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/eventicon"
            android:textColor="@color/primary_text"
            android:id="@+id/requestevent"/>-->

        <ImageView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:id="@+id/emailicon"
            android:tint="@color/colorPrimary"
            android:layout_below="@+id/nameicon"
            android:src="@drawable/ic_email_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:paddingLeft="2dp"
            android:paddingTop="3dp"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@+id/emailicon"
            android:textSize="12sp"
            android:id="@+id/email"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:id="@+id/numticketsicon"
            android:tint="@color/colorPrimary"
            android:layout_below="@+id/emailicon"
            android:src="@drawable/ic_ticket"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:paddingLeft="2dp"
            android:paddingTop="3dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/numticketsicon"
            android:textColor="@color/primary_text"
            android:id="@+id/numtickets"/>

        <!--<ImageButton
            android:layout_width="100px"
            android:layout_height="80px"
            android:src="@drawable/ic_action_name"
            android:id="@+id/accept"
            android:layout_toLeftOf="@+id/reject"
            android:layout_alignParentBottom="true"
            android:padding="12dp"
            android:backgroundTint="@color/colorPrimary"/>

        <ImageButton
            android:layout_width="100px"
            android:layout_height="80px"
            android:src="@drawable/ic_reject"
            android:id="@+id/reject"
            android:layout_alignRight="@+id/numtickets"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft= "12dp"
            android:paddingTop= "12dp"
            android:paddingBottom= "12dp"
            android:backgroundTint="#b71c1c"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/numticketsicon"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/reject"
                android:text="Reject"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/red"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/accept"
                android:layout_toRightOf="@id/reject"
                style="?android:attr/borderlessButtonStyle"
                android:text="Accept"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                />
        </LinearLayout>


    </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
